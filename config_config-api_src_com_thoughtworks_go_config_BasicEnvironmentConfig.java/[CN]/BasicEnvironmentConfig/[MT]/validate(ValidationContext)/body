{
  CruiseConfig cruiseConfig=validationContext.getCruiseConfig();
  for (  EnvironmentPipelineConfig pipelineRefConfig : this.pipelines) {
    PipelineConfig pipelineConfig=cruiseConfig.getPipelineConfigByName(pipelineRefConfig.getName());
    if (pipelineConfig == null)     continue;
    if (!cruiseConfig.getConfigRepos().isReferenceAllowed(this.origin,pipelineConfig.getOrigin()))     pipelineRefConfig.addError(EnvironmentPipelineConfig.ORIGIN,String.format("Environment defined in %s cannot reference a pipeline in %s",this.origin,pipelineConfig.getOrigin()));
  }
}
