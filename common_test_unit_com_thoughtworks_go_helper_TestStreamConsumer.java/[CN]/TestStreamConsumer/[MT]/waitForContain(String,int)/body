{
  long start=System.nanoTime();
  while (true) {
    if (output().contains(content)) {
      break;
    }
    if (System.nanoTime() - start > TimeUnit.SECONDS.toNanos(timeoutInSeconds)) {
      throw new RuntimeException("waiting timeout!, current output is: \n" + output());
    }
    Thread.sleep(10);
  }
}
