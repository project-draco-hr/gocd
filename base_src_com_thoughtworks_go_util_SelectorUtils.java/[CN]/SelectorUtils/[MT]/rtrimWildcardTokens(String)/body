{
  String[] tokens=tokenizePathAsArray(input);
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < tokens.length; i++) {
    if (hasWildcards(tokens[i])) {
      break;
    }
    if (i > 0 && sb.charAt(sb.length() - 1) != File.separatorChar) {
      sb.append(File.separatorChar);
    }
    sb.append(tokens[i]);
  }
  return sb.toString();
}
