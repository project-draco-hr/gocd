{
  String content=ConfigFileFixture.configWithEnvironmentsAndAgents("<environments>" + "  <environment name='uat'>" + "     <environmentvariables> "+ "         <variable name=' /?*'>variable_name_value_1</variable>"+ "     </environmentvariables> "+ "  </environment>"+ "</environments>","<agents>" + "  <agent uuid='1' hostname='test1.com' ipaddress='192.168.0.1' isDenied='true' />" + "</agents>");
  try {
    ConfigMigrator.loadWithMigration(content);
    fail("Should not allow illegal characters");
  }
 catch (  Exception e) {
    assertThat(e.getMessage(),containsString("Name is invalid. \" /?*\" should conform to the pattern - [a-zA-Z0-9_\\-]{1}[a-zA-Z0-9_\\-.]*"));
  }
}
